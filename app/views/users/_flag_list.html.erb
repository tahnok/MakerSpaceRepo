<% if !repo_user.flag_message.blank? %>
  <% repo_user.flag_message.split('; ').drop(1).each_with_index do |flag, i| %>
    <%= button_to fa_icon('times'), { controller: :users, action: :remove_flag, flag_msg: flag, repo_user_id: repo_user.id }, method: :put, class: 'btn btn-default x-button' %>
    <b class="word-break">(<%= i + 1 %>) <%= flag %></b> <br />
  <% end %>
<% end %>
