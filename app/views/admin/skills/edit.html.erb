<section>
  <div class="text-center">
    <div class="float-end">
      <%= link_to 'Back', admin_skills_path %>
    </div>
    <h2 class="fw-bold">Editing <b><%= @skill.name.capitalize %></b></h2>
    <%= form_for @skill, url: { controller: 'admin/skills', action: 'update' } do |f| %>
      <div class="container">
        <div class="input-group">
            <span class="input-group-text">Skill Type:</span>
            <%= f.text_field :name, placeholder: 'Write a unique name...', class: 'form-control', required: true %>
            <%= f.submit 'Update Skills', class: 'btn btn-primary btn-xl' %>
            <%= link_to 'Back', admin_skills_path, class: 'btn btn-secondary' %>
            <%= button_to 'Delete', { controller: 'admin/skills', action: :destroy, id: @skill.id }, method: :delete,
                                                                                                     data: { confirm: 'Are you sure that you want to delete this Skill Type ?' },
                                                                                                     class: 'btn btn-danger float-end' %>
        </div>
      </div>
    <% end %>

    <div class="pb-5">
    </div>
  </div>
</section>
