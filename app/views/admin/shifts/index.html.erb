<div class="mt-4">
  <div class="row">
    <div class="col-md-2 scroll-col">
      <div class="form-check mb-3">
        <input class="form-check-input checkbox-lg me-2 mt-0" type="checkbox" value="" id="hide-show-unavailabilities" checked>
        <label class="form-check-label" for="hide-show-unavailabilities">
          Unavailabilities
        </label>
      </div>

      <% @colors.each do |user| %>
        <div class="pb-2">
          <label><%= user[:name] %></label>
          <br>
          <div class="d-flex">
            <input type="color" name="color" onchange="updateColor(<%= user[:id] %>, this.value)" class="form-control form-control-color-shift" value="<%= user[:color] %>" title="Choose your color">
            <input class="form-check-input checkbox-lg ms-1 shift-hide-button" id="user-<%= user[:id] %>" type="checkbox" onclick="toggleVisibility(<%= user[:id] %>)" checked>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-10">
      <div class="d-flex justify-content-center gap-2">
        <%= form_tag staff_dashboard_change_space_path, method: :put do %>
          <div class="input-group mb-3">
            <%= label_tag :space_id, 'Space', class: 'input-group-text' %>
            <%= select_tag :space_id, options_for_select(Space.all.pluck(:name, :id), selected: @space_id), class: 'form-select' %>
            <%= hidden_field_tag :shifts, true %>
            <button class="btn btn-outline-secondary" type="submit">Go</button>
          </div>
        <% end %>

        <%= form_tag admin_shifts_path, method: :get do %>
          <div class="input-group mb-3">
            <%= label_tag :time_period_id, 'Time Period', class: 'input-group-text' %>
            <%= select_tag :time_period_id, options_for_select(TimePeriod.all.pluck(:name, :id), selected: (params[:time_period_id].presence || TimePeriod.current.id)), class: 'form-select' %>
            <button class="btn btn-outline-secondary" type="submit">Go</button>
          </div>
        <% end %>
      </div>

      <div id="calendar"></div>
    </div>
  </div>

  <br>

  <!-- Modal -->

  <div class="modal fade" id="unavailabilityModal" tabindex="-1" role="dialog" aria-labelledby="unavailabilityModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">New Unavailability</h5>
          <button type="button" class="btn-close shift-cancel" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3 text-center row">
            <div class="col-md-12 mb-3">
              <%= label_tag :day, 'Day of the week', class: 'form-label' %>
              <%= select_tag :day, options_for_select(Hash[Date::DAYNAMES.zip([0, 1, 2, 3, 4, 5, 6])]), class: 'form-control form-select', id: 'day' %>
            </div>

              <div class="col-md-6 mb-3">
                <label for="start-datetime">Start Time</label>
                <div class="input-group">
                  <%= text_field_tag 'start_time', '', id: 'start-time', autocomplete: 'off', class: 'form-control inanimate', required: true %>
                  <button class="btn btn-outline-danger" id="start-time-clear" type="button">
                    <i class="fa fa-times"></i>
                  </button>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <label for="end-datetime">End Date</label>
                <div class="input-group">
                  <%= text_field_tag 'end_time', '', id: 'end-time', autocomplete: 'off', class: 'form-control inanimate', required: true %>
                  <button class="btn btn-outline-danger" id="end-time-clear" type="button">
                    <i class="fa fa-times"></i>
                  </button>
                </div>
              </div>

            <div style="padding-left: 0.75rem; padding-right: 0.75rem" class="mb-3">
              <%= label_tag :user_id, 'User' %>
              <%= select_tag :user_id, options_for_select(@staff), { id: 'user-id', autocomplete: 'off', required: true, class: 'form-control form-select' } %>
            </div>

            <div class="mb-3 text-center">
              <%= label_tag :time_period_id, 'Time Period', class: 'form-label' %>
              <%= select_tag :time_period_id, options_for_select(TimePeriod.all.pluck(:name, :id), selected: @time_period.id), { id: 'time-period-id', autocomplete: 'off', class: 'form-control form-select', required: true } %>
            </div>

          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary shift-cancel" data-bs-dismiss="modal">Close</button>
          <button type="button" id="modal-save" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Toasts -->
  <div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="toast-color-update-success" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          The color of the user has been successfully updated!
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>

    <div id="toast-color-update-failed" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          The color of the user has not been updated... Please try again later.
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>

  <%= vite_javascript_tag 'admin_availability_calendar', media: 'all', 'data-turbo-track': 'reload' %>
</div>

<style>
    .container {
        max-width: 100%!important;
        padding-left: 3%;
        padding-right: 3%;
    }
</style>
