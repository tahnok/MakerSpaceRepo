<div>
  <br>
  <div class="d-flex justify-content-center">
    <%= form_tag admin_shifts_path, method: :get do %>
      <div class="input-group mb-3">
        <%= label_tag :space_id, "Space", class: 'input-group-text' %>
        <%= select_tag :space_id, options_for_select(Space.all.pluck(:name, :id), selected: (params[:space_id].present? ? params[:space_id] : Space.find_by(name: 'Makerspace').id)), class: "form-select" %>
        <button class="btn btn-outline-secondary" type="submit">Go</button>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-2">
      <% @colors.each do |staff_name, array| %>
        <%= form_tag(update_color_admin_shifts_path, method: :post) do %>
          <label><%= staff_name %></label>
          <br>
          <div class="w-auto d-inline-block">
            <input type="color" name="color" class="form-control form-control-color" value="<%= array[1] %>" title="Choose your color">
            <%= hidden_field_tag :id, array[0] %>
            <button type="submit" class="btn btn-primary btn-sm ms-1">Update color</button>
          </div>
        <% end %>
        <br>
      <% end %>
    </div>
    <div class="col-md-10">
      <div id="calendar"></div>
    </div>
  </div>

  <br>

  <%= javascript_pack_tag 'admin_availability_calendar' %>
</div>

<style>
    .container {
        max-width: 100%!important;
        padding-left: 3%;
        padding-right: 3%;
    }
</style>