<div>
  <br>
  <div class="d-flex justify-content-center">
    <%= form_tag staff_dashboard_change_space_path, method: :put do %>
      <div class="input-group mb-3">
        <%= label_tag :space_id, "Space", class: 'input-group-text' %>
        <%= select_tag :space_id, options_for_select(Space.all.pluck(:name, :id), selected: @space_id), class: "form-select" %>
        <%= hidden_field_tag :shifts, true %>
        <button class="btn btn-outline-secondary" type="submit">Go</button>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-2">

      <button id="hide-show-unavailabilities" class="btn btn-primary">Hide Unavailabilities</button>
      <br><br>
      <button id="hide-show-google-events" class="btn btn-primary">Hide Events</button>
      <br><br>
      <button id="hide-show-staff-needed" class="btn btn-primary">Hide Staff Needed</button>
      <br><br>

      <% @colors.each do |staff_name, array| %>
        <%= form_tag(update_color_admin_shifts_path, method: :post) do %>
          <label><%= staff_name %></label>
          <br>
          <div class="w-auto d-inline-block">
            <input type="color" name="color" class="form-control form-control-color" value="<%= array[1] %>" title="Choose your color">
            <%= hidden_field_tag :id, array[0] %>
            <%= hidden_field :shifts, true %>
            <button type="submit" class="btn btn-primary btn-sm ms-1">Update color</button>
            <button type="button" id="<%= staff_name.strip.downcase.gsub(' ', '-') %>" onclick="toggleVisibility('<%= staff_name.strip.downcase.gsub(' ', '-') %>')" class="btn btn-primary btn-sm ms-1">Hide</button>
          </div>
        <% end %>
        <br>
      <% end %>
    </div>
    <div class="col-md-10">
      <div id="calendar"></div>
    </div>
  </div>

  <br>

  <div class="modal fade" id="shiftModal" tabindex="-1" role="dialog" aria-labelledby="shiftModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Shift</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3 text-center">
            <label for="start-datetime">Start Date</label>
            <input id="start-datetime" autocomplete="false" class="form-control">
            <br>
            <label for="end-datetime">End Date</label>
            <input id="end-datetime" autocomplete="false" class="form-control">
            <br>
            <%= label_tag :user_id, "User to select" %>
            <%= select_tag :user_id, options_for_select(User.where(role: 'staff').pluck(:name, :id)), { id: 'modalUserId', autocomplete: 'off', multiple: true, required: true} %>
            <br>
            <label for="modal-reason">Reason</label>
            <select id="modalReason" class="form-select">
              <option value="Shift">Shift</option>
              <option value="Training">Training</option>
              <option value="Meeting">Meeting</option>
              <option value="Project">Project</option>
              <option value="Other">Other</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="shiftCancel" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" id="shiftSave" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <%= javascript_pack_tag 'admin_shifts' %>
</div>

<style>
    .container {
        max-width: 100%!important;
        padding-left: 3%;
        padding-right: 3%;
    }
</style>