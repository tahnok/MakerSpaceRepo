<section>
  <div class="text-center">
    <h2>Editing <b><%= @location.name %></b></h2>
    <br />
    <%= form_for @location, url: { controller: 'admin/drop_off_locations', action: 'update' } do |f| %>
      <div class="container">
        <div class="row text-center">
          <div class="col-md-12 form-group input-group">
            <span class="input-group-text">Drop-Off Location name</span>
            <%= f.text_field :name, placeholder: 'Write a unique name...', class: 'form-control', required: true %>
            <%= f.submit 'Update Location', class: 'btn btn-primary btn-xl' %>
            <%= link_to 'Back', admin_drop_off_locations_path, class: 'btn btn-secondary' %>
            <%= button_to 'Delete', { controller: 'admin/drop_off_locations', action: :destroy, id: @location.id }, method: :delete,
                                                                                                                    data: { confirm: 'Are you sure that you want to delete this location ?' },
                                                                                                                    class: 'btn btn-danger float-end' %>
        </div>
      </div>
    <% end %>
    <div class="pb-5">

    </div>
  </div>
</section>
