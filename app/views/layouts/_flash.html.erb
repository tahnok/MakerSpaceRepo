<% flash.each do |key, msg| %>
  <% if key == "notice" %>
    <div class="alert alert-success alert-dismissible fade show col-md-12 text-center" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= msg.try(:html_safe) %>
    </div>
  <% elsif key == "alert_blue" %>
    <div class="alert alert-info alert-dismissible fade show col-md-12 text-center" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= msg %>
    </div>
  <% elsif key == "alert_yellow" %>
    <div class="alert alert-warning alert-dismissible fade show col-md-12 text-center" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= msg %>
    </div>
  <% elsif key == "alert" %>
    <div class="alert alert-danger alert-dismissible fade show col-md-12 text-center" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= msg.try(:html_safe) %>
    </div>
  <% elsif key == "alert_darkblue" %>
    <div class="alert alert-primary alert-dismissible fade show col-md-12 text-center" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= msg %>
    </div>
  <% elsif key == "alert_gray" %>
    <div class="alert alert-secondary alert-dismissible fade show col-md-12 text-center" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= msg %>
    </div>
  <% elsif key == "alert_darkgray" %>
    <div class="alert alert-dark alert-dismissible fade show col-md-12 text-center" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= msg %>
    </div>
  <% elsif key == "alert_light" %>
    <div class="alert alert-light alert-dismissible fade show col-md-12 text-center" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= msg %>
    </div>
  <% end %>
<% end %>