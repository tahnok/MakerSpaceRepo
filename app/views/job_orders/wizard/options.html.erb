<section>
  <%= form_for(@job_order, url: {controller: "job_orders", action: "new"}) do |f| %>

    <div class="text-center">

      <h2>New Job Order (Step 3/4)</h2>

      <div class="form-group col-lg-6 mx-auto">
        <%= f.collection_check_boxes :job_option_ids, @options, :id, :name_with_description do |b| %>
          <div class="custom-control custom-checkbox">
            <%= b.check_box class: 'custom-control-input' %>
            <%= b.label class: 'custom-control-label' %>
          </div>

          <% if o.need_files %>
            <div class="custom-file">
              <%= f.file_field :options_file, class: "custom-file-input" %>
              <%= f.label :options_file, "File", class: 'custom-file-label' %>
            </div>
          <% end %>
        <% end %>
      </div>

      <%= hidden_field_tag :step, 4 %>
      <%= f.hidden_field :id, value: @job_order.id %>
      <%= f.submit "Next Step", class: "btn btn-primary" %>
    </div>
  <% end %>

</section>