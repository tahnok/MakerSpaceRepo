<section class="padding">

  <div>

    <div class="title">Last Updates 3D-Printers Usage</div>

    <div class="text-center">
      <div><%= link_to "Manage 3D Printers", staff_printers_printers_path, class: 'btn btn-secondary'%></div>
    </div>

    <div>
      <% @printer_types.each do |type| %>
        <div class="mb-3">
          <h2><%= type %></h2>
          <% Printer.get_printer_ids(type).each do |printer_id| %>
            <% last_session = Printer.get_last_number_session(printer_id) %>
            <%= "Printer Number: #{Printer.find(printer_id).number} | Last User:" %>
            <b class="username"><%= link_to last_session.user.username.capitalize, user_path(last_session.user.username) %></b>
            <%= last_session.created_at.strftime(" | %A, %m/%d/%Y at %I:%M%p") if last_session %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</section>
