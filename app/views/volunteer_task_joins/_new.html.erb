<div class="col-md-6">
  <p>Add Staff Responsible for the Task:</p>
  <%= form_for @new_volunteer_join, url: {controller: "volunteer_task_joins", action: "create"} do |f| %>
    <%= f.hidden_field :volunteer_task_id, value: @volunteer_task.id %>
    <%= f.select :user_id, @staff, {prompt: "Choose Staff"}, {class: 'form-control form-select', 'data-live-search': 'true'} %>
    <br />
    <br />
    <%= f.submit "Add Staff", class: "btn btn-primary mb-5" %>
  <% end %>
</div>

<div class="col-md-6">
  <p>Add Volunteer to this Task:</p>
  <%= form_for @new_volunteer_join, url: {controller: "volunteer_task_joins", action: "create"} do |f| %>
    <%= f.hidden_field :volunteer_task_id, value: @volunteer_task.id %>
    <%= f.select :user_id, @volunteers, {prompt: "Choose Volunteer"}, {class: 'form-control form-select', 'data-live-search': 'true'} %>
    <br />
    <br />
    <%= f.submit "Add Volunteer", class: "btn btn-primary mb-5" %>
  <% end %>
</div>