<div class="container">
  <div class="col-lg-12 text-center mb-4">
    <br>
    <h2><b>Get a free kit to a user</b></h2>
  </div>
  <%= form_for(@kit) do |f| %>
    <div class="mb-3">
      <%= f.label :user_id, "User", class:"form-label" %>
      <%= f.select(:user_id, "", {prompt: "Choose User..."}, {:class => "kit_user_select form-control form-select", :id => "kit_user_select"}) %>
      <br>
      <%= f.label :proficient_project_id, "Related Proficient Project", class:"form-label" %>
      <%= f.select(:proficient_project_id, options_for_select(@proficient_projects), {:include_blank => true}, class: "form-control form-select") %>
    </div>
    <div class="text-center">
      <%= f.submit "Create Kit request", class: "btn btn-primary" %>
      <br/>
    </div>
  <% end %>
</div>
<br><br>
  <%= javascript_pack_tag 'project_kits', 'data-turbolinks-track': 'reload' %>
