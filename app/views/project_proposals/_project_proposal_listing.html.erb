<% if @user.admin? %>
  <div class="card">
    <div class="card-header" data-bs-toggle="collapse" data-bs-target="#page_pending" aria-expanded="true" aria-controls="collapseOne">
      <h2 class="mb-0">
        <button class="btn btn-link d-block w-100 text-start text-center" type="button" >
          Pending Project Proposals
        </button>
      </h2>
    </div>

    <div id="page_pending" class="collapse <%= "show" if params[:search] != "" && params[:search] != "search="  && @pending_project_proposals.count > 0 %>">
      <div class="card-body">
        <%= render :partial => 'listing', :locals => {:title => "Pending Project Proposals", :project_proposals => @pending_project_proposals, param_name: "page_pending"} %>
      </div>
    </div>
  </div>
<% end %>
<div class="card">
  <div class="card-header" data-bs-toggle="collapse" data-bs-target="#page_approved">
    <h2 class="mb-0">
      <button class="btn btn-link d-block w-100 text-start collapsed text-center" type="button">
        Approved Project Proposals
      </button>
    </h2>
  </div>
  <div id="page_approved" class="collapse <%= "show" if params[:search] != "" && params[:search] != "search=" && @approved_project_proposals.count > 0 %>">
    <div class="card-body">
      <%= render :partial => 'listing', :locals => {:title => "Approved Project Proposals", :project_proposals => @approved_project_proposals, param_name: "page_approved"} %>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-header" data-bs-toggle="collapse" data-bs-target="#page_not_approved" aria-controls="collapseThree">
    <h2 class="mb-0">
      <button class="btn btn-link d-block w-100 text-start collapsed text-center" type="button">
        Project Proposals not approved
      </button>
    </h2>
  </div>
  <div id="page_not_approved" class="collapse <%= "show" if params[:search] != "" && params[:search] != "search=" && @not_approved_project_proposals.count > 0 %>">
    <div class="card-body">
      <%= render :partial => 'listing', :locals => {:title => "Project Proposals not approved", :project_proposals => @not_approved_project_proposals, param_name: "page_not_approved"} if @user.admin? %>      </div>
  </div>
</div>